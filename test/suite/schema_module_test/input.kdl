@module "Classic" {
    @namespace Classic;

    define(*type HBYT) {
        isa = integer;
        size = 1;
    };

    define(*type HLNG) {
        isa = integer;
        size = 4;
    };

    define(*type CSTR) {
        isa = string;
        size = null_terminated;
        char = macroman;
    };

    define(*type Color) {
        isa = integer;
        size = 4;
    };

    define(*function : Classic::Color.rgb : Classic::HBYT Red, HBYT Green, HBYT Blue) {
        (255 << 24) | (Red << 16) | (Green << 8) | Blue
    };
};

